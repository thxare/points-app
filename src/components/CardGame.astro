---
interface Props {
  date: string;
  winner: string;
  id: number;
  players: string[];
}

const { date, winner, id, players } = Astro.props;
const playersNames = players.join(", ");
---

<li class="link-card">
  <div class="winners">
    <h2>Partida numero {id}</h2>
    <div>
      <span class="winner">Ganador</span>: {winner}
    </div>
    <div>
      Participantes: {playersNames}
    </div>
    <span class="date">
      {date}
    </span>
  </div>
</li>
<style>
  .link-card {
    list-style: none;
    display: flex;
    padding: 1px;
    background-color: #23262d;
    background-image: none;
    background-size: 400%;
    border-radius: 7px;
    background-position: 100%;
    transition: background-position 0.6s cubic-bezier(0.22, 1, 0.36, 1);
    box-shadow: inset 0 0 0 1px rgba(255, 255, 255, 0.1);
  }
  .link-card > .winners {
    width: 100%;
    text-decoration: none;
    line-height: 1.4;
    padding: calc(1.5rem - 1px);
    border-radius: 8px;
    color: white;
    background-color: #23262d;
    opacity: 0.8;
  }
  .card-image {
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    width: 250;
    height: 200;
  }
  .card-image img {
    width: 100%;
    height: 100%;
    object-fit: contain;
  }
  .date {
    font-size: .8rem;
  }
  h2 {
    margin: 0;
    font-size: 1.25rem;
    transition: color 0.6s cubic-bezier(0.22, 1, 0.36, 1);
  }
  p {
    margin-top: 0.5rem;
    margin-bottom: 0;
  }
  .link-card:is(:hover, :focus-within) {
    background-position: 0;
    background-image: var(--accent-gradient);
  }
  .link-card:is(:hover, :focus-within) h2 {
    color: rgb(var(--accent-light));
  }
</style>
