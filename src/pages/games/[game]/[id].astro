---
import LayoutGame from "../../../layouts/LayoutGame.astro";
import { db } from "../../../lib/firebaseConfig"; // Importa tu configuraciÃ³n de Firebase
import { collection, getDocs } from "firebase/firestore";
import Game from "../../../components/Game.astro";

export async function getStaticPaths() {
  const gamesCollection = collection(db, "gamesPlayed");
  const gamesSnapshot = await getDocs(gamesCollection);

  const paths = gamesSnapshot.docs.flatMap((doc) => {
    const data = doc.data();
    return {
      params: {
        game: data.game,
        id: doc.id,
      },
    };
  });

  return paths;
}

const { game, id } = Astro.params;
---

<LayoutGame title="Partidas">
  <Game id={id} game={game} />
</LayoutGame>

