---
interface Props {
  title: string;
  path: string;
  target: boolean;
}
const { title, path, target } = Astro.props;
---

<a class="button-game" href={path} target={target ? "_blank" : ""}>
  <span class="text">{title} </span></a
>
<style>
  .button-game {
    display: flex;
    padding: 1px;
    background-color: #23262d;
    background-image: none;
    background-size: 400%;
    border-radius: 50px;
    border: none;
    background-position: 100%;
    transition: background-position 0.6s cubic-bezier(0.22, 1, 0.36, 1);
    box-shadow: inset 0 0 0 1px rgba(255, 255, 255, 0.1);
    cursor: pointer;
    text-decoration: none;
  }
  .button-game > .text {
    width: 100%;
    text-decoration: none;
    line-height: 1.4;
    padding: 15px 40px;
    border-radius: 50px;
    color: white;
    background-color: #23262d;
    opacity: 0.8;
    margin: 0;
    font-size: 1rem;
    transition: color 0.6s cubic-bezier(0.22, 1, 0.36, 1);
  }

  .button-game:is(:hover, :focus-within) {
    background-position: 0;
    background-image: var(--accent-gradient);
  }
  .button-game:is(:hover, :focus-within) h2 {
    color: rgb(var(--accent-light));
  }
</style>
